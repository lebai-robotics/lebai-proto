{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJs",
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "declaration": true,
        // "declarationDir": "dist/type",
    },
    "exclude": [
        "node_modules"
    ]
}